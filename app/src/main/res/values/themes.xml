<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T4Nelson" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_800</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/primary_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_800</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/secondary_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

    <style name="Theme.T4Nelson.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.T4Nelson.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.T4Nelson.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>